.section.page-banner-section{style: "background-image: url(#{asset_path('page-banner.jpg')});"}
  .container
    .page-banner-content
      %h2.page-title Zresetuj hasło
      %ul.breadcrumb
        %li.breadcrumb-item
          %a{href: root_path} Strona główna
        %li.breadcrumb-item.active Resetowanie hasła

.section.section-padding
  .container
    / Register & Login Wrapper Start
    .register-login-wrapper
      .row.justify-content-center
        .col-lg-6.col-xl-5
          / Register & Login Form Start
          .register-login-form
            %h3.title
              = t(".forgot_your_password")
            .form-wrapper.text-center
              = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
                = render "devise/shared/error_messages", resource: resource
                %br/
                %p.text-left= t(".info")
                = f.email_field :email, autofocus: true, autocomplete: "email"
                = f.form_group do
                  = f.submit t(".send_me_reset_password_instructions"), class: 'btn btn-primary btn-block btn-lg'
              .text-center
                = render "devise/shared/links"
