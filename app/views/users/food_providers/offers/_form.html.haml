.form-wrapper
  = simple_form_for(@offer, url: @offer.persisted? ? users_food_providers_offer_path(@offer.hashid) : users_food_providers_offers_path) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
      = f.input :name
      = f.input :description
      = f.input :initial_quantity, input_html: { min: 1 }
      = f.input :available_from, as: :date, html5: true, input_html: { value: Date.today }
      = f.input :main_image, as: :file
      = image_tag @offer.main_image if @offer.main_image.attached?
      -# = f.input :available_to

    .form-actions.mt-3
      = f.button :submit, "Zapisz ofertÄ™", class: "btn btn-secondary btn-hover-dark w-100"
