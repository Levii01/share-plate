            .col-lg-4
              / Courses Details Sidebar Start
              .sidebar
                / Sidebar Widget Information Start
                .sidebar-widget.widget-information
                  .info-price
                    %span.price Najważniejsze informacje
                  .info-list
                    %ul
                      %li
                        %i.icofont-man-in-glasses
                        %strong Lokal
                        %span= @offer.food_provider.name
                      %li
                        %i.icofont-chef
                        %strong Działalność
                        %span= t("activerecord.attributes.food_provider.provider_types.#{@food_provider.provider_type}")
                      %li
                        %i.icofont-clock-time
                        %strong Odbiór dnia
                        %span= l(@reservation.created_at, format: :date)
                      %li
                        %i.icofont-vehicle-delivery-van
                        %strong Odebrano
                        %span= @reservation.picked_up? ? l(@reservation.picked_up, format: :time) : "⏳"
                      %li
                        %i.icofont-phone
                        %strong Telefon
                        %span= @food_provider.phone
                      %li
                        %i.icofont-email
                        %strong Email
                        %span= @food_provider.email
                      %li
                        %i.icofont-certificate-alt-1
                        %strong Weryfikacja
                        %span= @food_provider.state
                      %li
                        %i.icofont-spinner-alt-5
