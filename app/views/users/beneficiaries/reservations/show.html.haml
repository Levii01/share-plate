                    .info-btn
                      = link_to 'Anuluj rezerwację', users_beneficiaries_reservation_path(@reservation), class: 'btn btn-danger btn-hover-primary"', data: { turbo_confirm: 'Czy na pewno chcesz anulować rezerwację?', turbo_method: :delete }
